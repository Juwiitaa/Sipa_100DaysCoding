package day41;
import java.util.Arrays;
public class Main {
	public static void main(String[] args) {
		
		System.out.println("===== Menambah Elemen Array =====");
		
		System.out.println("= Sebelum ditambah =");
		String[] nama = {"Saya","Kamu","Anda","Aku","Mereka"};
		System.out.println(Arrays.toString(nama));
		
		String tambah = "Kalian";
		
		String[] namaBaru = new String [nama.length+1];
		
		for (int a = 0; a < nama.length; a++) {
			namaBaru[a] = nama[a];
		}
		
		namaBaru[nama.length] = tambah;
		
		System.out.println("= Setelah ditambah =");
		System.out.println(Arrays.toString(namaBaru));
		
		
	}
}
